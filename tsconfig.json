{
  "compilerOptions": {
    "lib": ["ES2021"],
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "useDefineForClassFields": true,
    "allowImportingTsExtensions": true, // cambia "bundler" por "node"
  },
  "include": ["src"]
}
